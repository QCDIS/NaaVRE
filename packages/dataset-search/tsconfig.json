{
  "extends": "../../tsconfig-base",
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "module": "commonjs",
    "outDir": "lib",
    "rootDir": "src",
    "target": "es6",
    "types": ["node"],
    "typeRoots": ["./node_modules/@types","src/types","./src/types"],
    "skipLibCheck": true
  },
  "include": ["src/*", "src/*/*"]
}